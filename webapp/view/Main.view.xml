<mvc:View controllerName="my.ui5app.controller.Main" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m">
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>title}">
				<Panel headerText="{i18n>titleDeposit}">
					<Label id="depositLabel" text="{i18n>labelDepositAmount}" labelFor="depositInput"/>
					<Input id="depositInput" type="Number"/>
					<Button id="depositButton" text="{i18n>buttonDepositAmount}" press="onPressDeposit"/>
				</Panel>
				<Panel headerText="{i18n>titlePay}">
					<Label id="payLabel" text="{i18n>labelPayAmount}" labelFor="depositInput"/>
					<Input id="payInput" type="Number"/>
					<Button id="payButton" text="{i18n>buttonPayAmount}" press="onPressPay"/>
				</Panel>
				<Panel headerText="{i18n>titleAmount}">
					<Title id="amountTitle" text="0"/>
				</Panel>
			</Page>
		</pages>
	</App>
</mvc:View>